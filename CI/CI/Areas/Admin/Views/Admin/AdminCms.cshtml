                                    <div class="col-12 mb-2">
                                        <lable>Title</lable>
                                        <input class="form-control" />
                                    </div>
                                    <div class="col-12 mb-2">
                                        <lable>Description</lable>
                                        <input name="editor1" id="editor1" class="form-control" />
                                       
                                    </div>
                                    <div class="col-12 mb-2">
                                        <lable>Slug</lable>
                                        <input class="form-control" />
                                    </div>
                                    <div class="col-12 mb-2">
                                        <lable>Status</lable>
                                        <input class="form-control" />
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn closebtn " data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn savebtn">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade " id="AdminCMSEditmodal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog  modal-lg modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Edit </h1>
                        <button type="button" class="bg-white border-0" data-bs-dismiss="modal" aria-label="Close">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>
                    <div class="modal-body ">
                        <div class="container">
                            <div class="row">
                                <div class="col-12 mb-2">
                                    <lable>Title</lable>
                                    <input class="form-control" />
                                </div>
                                <div class="col-12 mb-2">
                                    <lable>Description</lable>
                                    <input name="editor2" id="editor2" class="form-control" />

                                </div>
                                <div class="col-12 mb-2">
                                    <lable>Slug</lable>
                                    <input class="form-control" />
                                </div>
                                <div class="col-12 mb-2">
                                    <lable>Status</lable>
                                    <input class="form-control" />
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn closebtn " data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn savebtn">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
        <table id="example" class="table" style="width:100%;border: 1px solid #e9ecef;">
            <thead class="thead-light" style="background-color:#F8F9FC;">
                <tr>
                    <th scope="col">Title</th>
