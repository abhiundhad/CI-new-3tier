@model CI.Models.FogetModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

<link rel="stylesheet" href="/css/forgot.css">
<!-- <script src="/bootstrap-4.0.0-dist[1]/js/bootstrap.bundle.min.js"></script> -->
</head>
<div>
    @if (TempData["Email Send"] != null)
    {
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
        <script type="text/javascript">


            toastr.info('@TempData["Email Send"]');


        </script>
    }
</div>
<body class="pb-0">
    <div class="container-fluid maindiv ">
        <div class="row ">
            <div class="col col-lg-7 col-md-12 col-sm-12 col-xs-12 ps-0    ">
                <div id="carouselExampleCaptions" class="carousel slide me-0" data-bs-ride="carousel" data-bs-interval="1000">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner  ">

                        @foreach (var banner in ViewBag.firstBanner)
                        {
                            <div class="carousel-item   active" data-bs-interval="5000">
                                <img src="@banner.Image" class="d-block w-100 carousel-img object-fit-none border rounded" alt="...">
                                <div class="carousel-caption d-none d-md-block ">
                                    <h2>Sed ut perspiciatis unde omnis iste natus voluptatem.</h2>
                                    <p>
                                        @banner.Text
                                    </p>
                                </div>
                            </div>
                        }
                        @foreach (var banner in ViewBag.Banners)
                        {
                            <div class="carousel-item " data-bs-interval="5000">
                                <img src="@banner.Image" class="d-block w-100 carousel-img object-fit-none border rounded " alt="...">
                                <div class="carousel-caption d-none d-md-block ">
                                    <h2>Sed ut perspiciatis unde omnis iste natus voluptatem.</h2>
                                    <p>
                                        @banner.Text
                                    </p>
                                </div>
                            </div>
                        }
                    </div>

                </div>

            </div>
            
               

            <div class=" sidediv col-lg-4 col-md-12 col-sm-12 col-xs-11  align-self-center">
            <div class="row justify-content-center">
                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9 secdiv">
                        <form asp-controller="Forget" asp-action="Forget" >
                        <p class="fs-5 text-center forget ">Forgot Password</p>
                        <div class="text-center">
                            <p class=" para">Enter your email address you've using for your account below and we will send you a password reset link</p>
                            
                        </div>
                        
                        <div class="mb-3 mt-3 ">
                                <label asp-for="Email" for=" exampleInputEmail1" class="form-label">Email address</label>
                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter your email address" asp-for="Email"  onkeyup="emptyemaill()">
                                <span asp-validation-for="Email" class="text-danger"></span>
                          <div class="text-danger"style="color:red;" id="ENOTE">
                              @ViewBag.emailerror
                          </div>
                        </div>
                        
                        <div class=" ">
                            <button type="submit" class="btn mt-3">Reset my Password</button>
                        </div>
                        <div class="login  text-center text-dark mt-2  ">
                           <a  asp-area="Employee" asp-controller="Login" asp-action="Login" >login</a>
                        </div>
                        
                       
                        

                        <div class="  text-center  ">
                            <span>Privacy Policy</span>
                        </div>
                       
                      </form>
                </div>
            </div>

               
            </div>
        </div>

    </div>
    <script>
        function emptyemaill(){
            document.getElementById("ENOTE").style.display= "none";
        }
    </script>

    <script src="/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>