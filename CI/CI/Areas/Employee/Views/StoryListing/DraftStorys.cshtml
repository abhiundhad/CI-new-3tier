    <div class="album py-5 bg-light" style="margin-top:70px" id="storycards">
        <div class="container" > 
    

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @if (@ViewBag.totalcount == 0)

                {
                    <div class=" d-flex justify-content-center  w-100 ">
                        <span class="fs-4 mt-5  align-items-center"> No Draft Story Found</span>
                    </div>
                }
                else
                {
                    <div class="row   mt-2 mb-2 w-100">



                        <div class="firstdiv  me-auto d-flex">
                            <p class="fs-4 me-2">Explore </p>

                            <h3>@ViewBag.totalcount Draft Story</h3>
                        </div>





                    </div>
             
                @foreach (var story in Model)
                {

                    <div class="col ">
                            <div class="card shadow-sm" style="height:100% width:98%">
                            <div class="img-event">
                                @if (story.storymediapath != "")
                                {
                                        <img class="card-img-top storyimg" id="cardBanner"
                                         src="@story.storymediapath" alt="Card image cap">
                                }
                                else
                                {
                                        <img class="card-img-top storyimg" id="cardBanner"
                                         src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-1.png" alt="Card image cap">
                                }

                                <div class="ABC position-absolute top-0 start-0" style="height:100%; width:100%;">
                                    StoryId
                                        <a class="btn-view  rounded-5 p-1 px-4 position-absolute top-50 start-50 translate-middle" href="/Employee/StoryListing/ShareStory/@ViewBag.UserId?StoryId=@story.StoryId">
                                        Edit Story
                                        <i class="bi bi-arrow-right  "></i>

                                    </a>
                                </div>
                                <button class="theme-btn position-absolute top-100 start-50 translate-middle ">@story.Themename</button>
                            </div>
                            <div class="card-body">
                                <div class=" col-12">
                                    <h5 class="card-title demo-1  mt-3">@story.StoryTitle</h5>
                                        <div class="demo-2">
                                            <p class="card-text ">
                                                @Html.Raw(story.ShortDescription)
                                            </p>
                                        </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">

                                    <div class="d-flex me-auto mt-2 align-items-center ">
                                        @if (story.Useravtar != "")
                                        {
                                            <img src="@story.Useravtar" class="storyuserphoto" />
                                        }
                                        else
                                        {

                                            <img src="~/images/user1.png" class="storyuserphoto" />
                                        }
                                        <lable class="ms-2" id="">@story.username &nbsp;@story.lastname</lable>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                }



            </div>
     

        </div>
