@model CI.Models.RegistrationViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
   
    <link rel="stylesheet" href="/css/resiter.css">

    
</head>
<body class="">
    <!-- <script src="/bootstrap-4.0.0-dist[1]/js/bootstrap.bundle.min.js"></script> -->
    <div class="container-fluid maindiv ">
        <div class="row ">
            <div class="col col-lg-7 col-md-12 col-sm-12 col-xs-12  ps-0  ">
                <div id="carouselExampleCaptions" class="carousel slide me-0"  data-bs-ride="carousel" data-bs-interval="2000">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner  ">

                        @foreach (var banner in ViewBag.firstBanner)
                        {
                            <div class="carousel-item   active" data-bs-interval="5000">
                                <img src="@banner.Image" class="d-block w-100 carousel-img object-fit-none border rounded" alt="...">
                                <div class="carousel-caption d-none d-md-block ">
                                    <h2>Sed ut perspiciatis unde omnis iste natus voluptatem.</h2>
                                    <p>
                                        @banner.Text
                                    </p>
                                </div>
                            </div>
                        }
                        @foreach (var banner in ViewBag.Banners)
                        {
                            <div class="carousel-item " data-bs-interval="5000">
                                <img src="@banner.Image" class="d-block w-100 carousel-img object-fit-none border rounded" alt="...">
                                <div class="carousel-caption d-none d-md-block ">
                                    <h2>Sed ut perspiciatis unde omnis iste natus voluptatem.</h2>
                                    <p>
                                        @banner.Text
                                    </p>
                                </div>
                            </div>
                        }
                    </div>

                </div>

            </div>
            
               

            <div class=" sidediv col-lg-4 col-md-12 col-sm-12 col-xs-11  align-self-center">
            <div class="row justify-content-center">
                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                    <form  method="post" asp-controller="User" asp-action="Register" >
                        <div class="mb-3 mt-3 ">
                                @*<label for="exampleInputEmail1" class="form-label" asp-for="FirstName">Frist Name</label>
                                <input type="text" class="form-control" placeholder="First name" aria-label="First name" asp-for="FirstName" onkeyup="emptyemaill()">
                                <span class="text-danger " asp-validation-for="FirstName" id="requieredfiledefn"></span>*@
                                
                                <label for="exampleInputEmail1" asp-for="FirstName" class="form-label">First Name</label>
                                <input type="text" class="form-control" placeholder="First name" asp-for="FirstName" id="exampleInputFirstname"
                                       aria-describedby="emailHelp" onkeyup="errorfunction()">
                                <span class="text-danger" id="requiredFname" asp-validation-for="FirstName"></span>
                            </div>

                          <div class="mb-3 mt-1 ">
                                <label for="exampleInputEmail1" class="form-label" asp-for="LastName">Last Name</label>
                                <input type="text" class="form-control" placeholder="Last name" aria-label="Last name" asp-for="LastName">
                         
                          </div>   

                        <div class="mb-3 mt-1 ">
                                <label for="phoneno" class="form-label" asp-for="PhoneNumber">Phone Number</label>
                                <input type="number" class="form-control" id="phone" placeholder="phonenumber" asp-for="PhoneNumber" onkeyup="errorfunction()">
                                <span class="text-danger " id="requieredfiledpn" asp-validation-for="PhoneNumber"></span>
                        </div>

                        <div class="mb-3 mt-1 ">
                                <label for="exampleInputEmail1" class="form-label" asp-for="Email">Email address</label>
                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="evan.donohue@gmail.com" asp-for="Email" onkeyup="errorfunction()">
                                <span class="text-danger " id="requieredfiledemail" asp-validation-for="Email"></span>
                                <div class="text-danger " id="alredyreg">
                                    @ViewBag.RegError
                                </div>
                            
                          </div>

                        <div class="mb-3 mt-1">
                                <label for="exampleInputPassword1" class="form-label" asp-for="Password">Password</label>
                                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Enter Password" asp-for="Password" onkeyup="errorfunction()">
                                <span class="text-danger" id="requieredfiledpas" asp-validation-for="Password"></span>
                            </div>
                                 
                          <div class="mb-3 mt-2">
                            <label for="exampleInputPassword2" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" asp-for="ConfirmPassword" id="exampleInputPassword2" placeholder="confirm  Password" onkeyup="errorfunction()">
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>
                            <span class="text-danger" style="display:none;" id="passconferr">Password and Confirm Password must be same </span>
                       
                            
                            <div class=" ">
                            <button type="submit" class="btn mt-3" id="reg-btn">Register</button>
                        </div>
                        <div class="mb-1 mt-1 text-center ">
                            <a  class="lost mt-1 text-dark " asp-area="" asp-controller="Forget" asp-action="Forget">Lost your password?</a>
                        </div>
                       
                        <div class=" create1 mb-1 mt-1 text-center ">
                            <span>
                                Already registered?
                                </span><a class="create mt-1" asp-area="" asp-controller="Login" asp-action="Login"> Login now</a>
                        </div>
                        <div class="create2 mt-1">
                            <div class="mb-1  text-center alredy">
                                <span>
                                    Already registered? 
                                </span> 
                             </div>
                             <div class="mb-1  text-center create">
                                    <a class=" mt-1" asp-area="" asp-controller="Login" asp-action="Login">Login now</a>
                             </div>
                        </div>

                        <div class="mb-3  text-center ">
                            <span>Privacy Policy</span>
                        </div>
                       
                      </form>
                </div>
            </div>

               
            </div>
        </div>

    </div>
  
       
    <script src="https://code.jquery.com/jquery-3.6.3.min.js"
            integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

 
  
</body>
</html>